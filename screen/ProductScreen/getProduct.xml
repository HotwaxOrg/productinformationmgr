<?xml version="1.0" encoding="UTF-8" ?>
<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchema="http://moqui.org/xml-screen-3.xsd" require-authentication="anonymous-all">
<!--    Transition to different pages -->
    <transition name="productContent">
        <default-response url="../productContent"/>
    </transition>
    <transition name="productPrice">
        <default-response url="../productPrice"/>
    </transition>
    <transition name="productDimension">
        <default-response url="../productDimension"/>
    </transition>

    <actions>
        <log message="+++++++++++++${productId}++++++++++++"/>
        <service-call name="moqui.product.ProductServices.fetch#Product" in-map="[productId:productId]" out-map="context"/>
    </actions>

    <transition name="createProduct">
        <service-call name="create#productinfo.product.Product"/>
        <default-response type="none"/>
    </transition>

    <transition name="updateProduct">
        <service-call name="update#productinfo.product.Product"/>
        <default-response type="none"/>
    </transition>

    <transition name="deleteProduct">
        <service-call name="moqui.product.ProductServices.delete#Product"/>
        <default-response type="none"/>
    </transition>

    <widgets>
        <container-box>
            <box-header title="Enter Product Id"/>
            <box-body-nopad>
                <form-single name="GetProduct" transition=".">
                    <field name="productId">
                        <default-field><text-line/></default-field>
                    </field>
                    <field name="getProduct">
                        <default-field>
                            <submit/>
                        </default-field>
                    </field>
                </form-single>
            </box-body-nopad>
        </container-box>

<!--        Displaying the product details-->
        <container-box>
            <box-header title="Product Details"/>
            <box-body-nopad>
            <form-list name="ProductList" list="productList">
                <field name="productId">
                    <default-field>
                        <display/>
                    </default-field>
                </field>
                <field name="productName">
                    <default-field>
                        <display/>
                    </default-field>
                </field>
                <field name="productTypeEnumId">
                    <default-field>
                        <display/>
                    </default-field>
                </field>
                <field name="isVarient">
                    <default-field>
                        <display/>
                    </default-field>
                </field>
                <field name="isVirtual">
                    <default-field>
                        <display/>
                    </default-field>
                </field>
                <field name="fromDate">
                    <default-field>
                        <display/>
                    </default-field>
                </field>
                <field name="thruDate">
                    <default-field>
                        <display/>
                    </default-field>
                </field>
            </form-list>
            </box-body-nopad>
        </container-box>

        <!--        Creating a product -->
        <container-box>
            <box-header title="Create Product"/>
            <box-body>
                <form-single name="CreateProduct" transition="createProduct">
                    <field name="productId">
                        <default-field>
                            <text-line size="15"/>
                        </default-field>
                    </field>
                    <field name="productTypeEnumId">
                        <default-field>
                            <drop-down allow-empty="true" style="">
                                <entity-options text="${description ?: ''} [${enumId}]">
                                    <entity-find entity-name="moqui.basic.Enumeration">
                                        <econdition field-name="enumTypeId" value="ProductType"/>
                                        <order-by field-name="description"/>
                                    </entity-find>
                                </entity-options>
                            </drop-down>
                        </default-field>
                    </field>
                    <field name="productName">
                        <default-field>
                            <text-line size="15"/>
                        </default-field>
                    </field>
                    <field name="isVarient">
                        <default-field>
                            <radio>
                                <list-options list="['Y', 'N']"/>
                            </radio>
                        </default-field>
                    </field>
                    <field name="isVirtual">
                        <default-field>
                            <radio>
                                <list-options list="['Y', 'N']"/>
                            </radio>
                        </default-field>
                    </field>
                    <field name="fromDate">
                        <default-field>
                            <text-line/>
                        </default-field>
                    </field>
                    <field name="thruDate">
                        <default-field>
                            <text-line/>
                        </default-field>
                    </field>
                    <field name="createProductButton">
                        <default-field title="CreateProduct">
                            <submit/>
                        </default-field>
                    </field>
                </form-single>
            </box-body>
        </container-box>

        <!--        Updating a product -->
        <container-box>
            <box-header title="Update Product"/>
            <box-body-nopad>
                <form-list name="UpdateForm" list="productList" transition="updateProduct">
                    <field name="productId">
                        <default-field>
                            <display/>
                        </default-field>
                    </field>
                    <field name="productName">
                        <default-field>
                            <text-line/>
                        </default-field>
                    </field>
                    <field name="productTypeEnumId">
                        <default-field>
                            <drop-down allow-empty="true" style="">
                                <entity-options text="${description ?: ''} [${enumId}]">
                                    <entity-find entity-name="moqui.basic.Enumeration">
                                        <econdition field-name="enumTypeId" value="ProductType"/>
                                        <order-by field-name="description"/>
                                    </entity-find>
                                </entity-options>
                            </drop-down>
                        </default-field>
                    </field>
                    <field name="isVarient">
                        <default-field>
                            <text-line/>
                        </default-field>
                    </field>
                    <field name="isVirtual">
                        <default-field>
                            <text-line/>
                        </default-field>
                    </field>
                    <field name="fromDate">
                        <default-field>
                            <text-line/>
                        </default-field>
                    </field>
                    <field name="thruDate">
                        <default-field>
                            <text-line/>
                        </default-field>
                    </field>
                    <field name="updateButton">
                        <default-field>
                            <submit/>
                        </default-field>
                    </field>
                </form-list>
            </box-body-nopad>
        </container-box>

        <!--        Deleting a product -->
        <container-box>
            <box-header title="Delete Product"/>
            <box-body-nopad>
                <form-list name="DeleteForm" list="productList" transition="deleteProduct">
                    <field name="productId">
                        <default-field>
                            <display/>
                        </default-field>
                    </field>
                    <field name="productName">
                        <default-field>
                            <display/>
                        </default-field>
                    </field>
                    <field name="productTypeEnumId">
                        <default-field>
                            <display/>
                        </default-field>
                    </field>
                    <field name="isVarient">
                        <default-field>
                            <display/>
                        </default-field>
                    </field>
                    <field name="isVirtual">
                        <default-field>
                            <display/>
                        </default-field>
                    </field>
                    <field name="fromDate">
                        <default-field>
                            <display/>
                        </default-field>
                    </field>
                    <field name="thruDate">
                        <default-field>
                            <display/>
                        </default-field>
                    </field>
                    <field name="deleteButton">
                        <default-field>
                            <submit/>
                        </default-field>
                    </field>
                </form-list>
            </box-body-nopad>
        </container-box>

        <container-box>
            <box-header title="Get Product Content"/>
            <box-body-nopad>
                <form-list name="GetProductContent" transition="productContent" list="productList">
                    <field name="getProductContent">
                        <default-field >
                            <submit/>
                        </default-field>
                    </field>
                </form-list>
            </box-body-nopad>
        </container-box>

        <container-box>
            <box-header title="Get Product Price"/>
            <box-body-nopad>
                <form-list list="productList" name="GetProdcuctPrice" transition="productPrice">
                    <field name="submitButton">
                        <default-field title="GetProductPrice">
                            <submit/>
                        </default-field>
                    </field>
                </form-list>
            </box-body-nopad>
        </container-box>

        <container-box>
            <box-header title="Get Product Dimension"/>
            <box-body-nopad>
                <form-list list="productList" name="GetProdcuctDimension" transition="productDimension">
                    <field name="submitButton">
                        <default-field title="GetProductDimension">
                            <submit/>
                        </default-field>
                    </field>
                </form-list>
            </box-body-nopad>
        </container-box>

<!--        <subscreens-active id="productContent"/>-->
    </widgets>
</screen>