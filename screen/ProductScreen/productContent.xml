<?xml version="1.0" encoding="UTF-8" ?>
<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchema="http://moqui.org/xml-screen-3.xsd" require-authentication="anonymous-all"
        default-menu-index="3">
    <parameter name="productId"/>
    <action>
        <service-call name="moqui.product.ProductServices.fetch#ProductContent" in-map="[productId:productId]"
                      out-map="context"/>
    </action>

    <widgets>
        <label text="${productId}"/>
        <container-box>
            <box-header title="Product Content"/>
            <box-body>
                <form-list name="ContentList" list="contentList">
                    <field name="productContentId">
                        <default-field>
                            <display/>
                        </default-field>
                    </field>
                    <field name="productContentTypeEnumId">
                        <default-field>
                            <display/>
                        </default-field>
                    </field>
                </form-list>
            </box-body>
        </container-box>
    </widgets>
</screen>