<?xml version="1.0" encoding="UTF-8" ?>
<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchema="http://moqui.org/xml-screen-3.xsd" require-authentication="anonymous-all">

    <actions>
        <service-call name="moqui.product.ProductServices.fetch#Product" in-map="[productId:productId]" out-map="context"/>
        <service-call name="moqui.product.ProductServices.fetch#ProductContent" in-map="[productId:productId]"
                      out-map="context"/>
    </actions>

    <transition name="createProduct">
        <service-call name="create#productinfo.product.Product"/>
        <default-response type="none"/>
    </transition>

    <transition name="updateProduct">
        <service-call name="update#productinfo.product.Product"/>
        <default-response type="none"/>
    </transition>

    <transition name="deleteProduct">
        <service-call name="moqui.product.ProductServices.delete#Product"/>
        <default-response type="none"/>
    </transition>

    <transition name="createProductContent">
        <service-call name="create#productinfo.productcontent.ProductContent"/>
        <default-response type="none"/>
    </transition>

    <transition name="updateProductContent">
        <service-call name="update#productinfo.productcontent.ProductContent"/>
        <default-response type="none"/>
    </transition>

    <transition name="deleteProductContent">
        <service-call name="delete#productinfo.productcontent.ProductContent"/>
        <default-response type="none"/>
    </transition>

    <widgets>
<!--        Displaying the product basic details-->
        <container-box>
            <box-header title="Enter Product Id"/>
            <box-body-nopad>
                <form-single name="GetProduct" transition=".">
                    <field name="productId">
                        <default-field><text-line/></default-field>
                    </field>
                    <field name="getProduct">
                        <default-field>
                            <submit/>
                        </default-field>
                    </field>
                </form-single>
            </box-body-nopad>
        </container-box>

        <container-box>
            <box-header title="Product Details"/>
            <box-body-nopad>
                <form-list name="ProductList" list="productList">
                    <field name="productId">
                        <default-field>
                            <display/>
                        </default-field>
                    </field>
                    <field name="productName">
                        <default-field>
                            <display/>
                        </default-field>
                    </field>
                    <field name="productTypeEnumId">
                        <default-field>
                            <display/>
                        </default-field>
                    </field>
                    <field name="isVarient">
                        <default-field>
                            <display/>
                        </default-field>
                    </field>
                    <field name="isVirtual">
                        <default-field>
                            <display/>
                        </default-field>
                    </field>
                    <field name="fromDate">
                        <default-field>
                            <display/>
                        </default-field>
                    </field>
                    <field name="thruDate">
                        <default-field>
                            <display/>
                        </default-field>
                    </field>
                </form-list>

<!--                Displaying product content -->
                <form-list name="ContentList" list="contentList">
                    <field name="productContentId">
                        <default-field>
                            <display/>
                        </default-field>
                    </field>
                    <field name="productContentTypeEnumId">
                        <default-field>
                            <display/>
                        </default-field>
                    </field>
                </form-list>
            </box-body-nopad>
        </container-box>

        <!--        Creating a product -->
        <container-box>
            <box-header title="Create Product"/>
            <box-body>
                <form-single name="CreateProduct" transition="createProduct">
                    <field name="productId">
                        <default-field>
                            <text-line size="15"/>
                        </default-field>
                    </field>
                    <field name="productTypeEnumId">
                        <default-field>
                            <drop-down allow-empty="true" style="">
                                <entity-options text="${description ?: ''} [${enumId}]">
                                    <entity-find entity-name="moqui.basic.Enumeration">
                                        <econdition field-name="enumTypeId" value="ProductType"/>
                                        <order-by field-name="description"/>
                                    </entity-find>
                                </entity-options>
                            </drop-down>
                        </default-field>
                    </field>
                    <field name="productName">
                        <default-field>
                            <text-line size="15"/>
                        </default-field>
                    </field>
                    <field name="isVarient">
                        <default-field>
                            <radio>
                                <list-options list="['Y', 'N']"/>
                            </radio>
                        </default-field>
                    </field>
                    <field name="isVirtual">
                        <default-field>
                            <radio>
                                <list-options list="['Y', 'N']"/>
                            </radio>
                        </default-field>
                    </field>
                    <field name="fromDate">
                        <default-field>
                            <text-line/>
                        </default-field>
                    </field>
                    <field name="thruDate">
                        <default-field>
                            <text-line/>
                        </default-field>
                    </field>
                    <field name="createProductButton">
                        <default-field title="CreateProduct">
                            <submit/>
                        </default-field>
                    </field>
                </form-single>
            </box-body>
        </container-box>

<!--        Updating a product -->
        <container-box>
            <box-header title="Update Product"/>
            <box-body-nopad>
                <form-list name="UpdateForm" list="productList" transition="updateProduct">
                    <field name="productId">
                        <default-field>
                            <display/>
                        </default-field>
                    </field>
                    <field name="productName">
                        <default-field>
                            <text-line/>
                        </default-field>
                    </field>
                    <field name="productTypeEnumId">
                        <default-field>
                            <drop-down allow-empty="true" style="">
                                <entity-options text="${description ?: ''} [${enumId}]">
                                    <entity-find entity-name="moqui.basic.Enumeration">
                                        <econdition field-name="enumTypeId" value="ProductType"/>
                                        <order-by field-name="description"/>
                                    </entity-find>
                                </entity-options>
                            </drop-down>
                        </default-field>
                    </field>
                    <field name="isVarient">
                        <default-field>
                            <text-line/>
                        </default-field>
                    </field>
                    <field name="isVirtual">
                        <default-field>
                            <text-line/>
                        </default-field>
                    </field>
                    <field name="fromDate">
                        <default-field>
                            <text-line/>
                        </default-field>
                    </field>
                    <field name="thruDate">
                        <default-field>
                            <text-line/>
                        </default-field>
                    </field>
                    <field name="updateButton">
                        <default-field>
                            <submit/>
                        </default-field>
                    </field>
                </form-list>
            </box-body-nopad>
        </container-box>

<!--        Deleting a product -->
        <container-box>
            <box-header title="Delete Product"/>
            <box-body-nopad>
                <form-list name="DeleteForm" list="productList" transition="deleteProduct">
                    <field name="productId">
                        <default-field>
                            <display/>
                        </default-field>
                    </field>
                    <field name="productName">
                        <default-field>
                            <display/>
                        </default-field>
                    </field>
                    <field name="productTypeEnumId">
                        <default-field>
                            <display/>
                        </default-field>
                    </field>
                    <field name="isVarient">
                        <default-field>
                            <display/>
                        </default-field>
                    </field>
                    <field name="isVirtual">
                        <default-field>
                            <display/>
                        </default-field>
                    </field>
                    <field name="fromDate">
                        <default-field>
                            <display/>
                        </default-field>
                    </field>
                    <field name="thruDate">
                        <default-field>
                            <display/>
                        </default-field>
                    </field>
                    <field name="deleteButton">
                        <default-field>
                            <submit/>
                        </default-field>
                    </field>
                </form-list>
            </box-body-nopad>
        </container-box>

        <container-box>
            <box-header title="CreatingProductContent"/>
            <box-body>
                <!-- Creating product content-->
                <form-single name="CreateProductContent" transition="createProductContent">
                    <field name="productId">
                        <default-field>
                            <display/>
                        </default-field>
                    </field>
                    <field name="productContentTypeEnumId">
                        <default-field>
                            <drop-down allow-empty="true" style="">
                                <entity-options text="${description ?: ''} [${enumId}]">
                                    <entity-find entity-name="moqui.basic.Enumeration">
                                        <econdition field-name="enumTypeId" value="ContentType"/>
                                        <order-by field-name="description"/>
                                    </entity-find>
                                </entity-options>
                            </drop-down>
                        </default-field>
                    </field>
                    <field name="productContentId">
                        <default-field>
                            <text-line size="15"/>
                        </default-field>
                    </field>
                    <field name="contentLocation">
                        <default-field>
                            <text-line/>
                        </default-field>
                    </field>
                    <field name="createProductContentButton">
                        <default-field title="CreateProductContent">
                            <submit/>
                        </default-field>
                    </field>
                </form-single>
            </box-body>
        </container-box>

<!--        Updating product content-->
        <container-box>
            <box-header title="UpdateProductContent"/>
            <box-body>
                <form-list list="contentList" name="UpdateProductContent" transition="updateProductContent">
                    <field name="productContentId">
                        <default-field>
                            <display/>
                        </default-field>
                    </field>
                    <field name="productContentTypeEnumId">
                        <default-field>
                            <drop-down allow-empty="true" style="">
                                <entity-options text="${description ?: ''} [${enumId}]">
                                    <entity-find entity-name="moqui.basic.Enumeration">
                                        <econdition field-name="enumTypeId" value="ContentType"/>
                                        <order-by field-name="description"/>
                                    </entity-find>
                                </entity-options>
                            </drop-down>
                        </default-field>
                    </field>
                    <field name="productId">
                        <default-field>
                            <drop-down allow-empty="true" style="">
                                <entity-options text="${productId}">
                                    <entity-find entity-name="productinfo.product.Product"/>
                                </entity-options>
                            </drop-down>
                        </default-field>
                    </field>
                    <field name="contentLocation">
                        <default-field>
                            <display/>
                        </default-field>
                    </field>
                    <field name="updateProductContent">
                        <default-field>
                            <submit/>
                        </default-field>
                    </field>
                </form-list>
            </box-body>
        </container-box>

<!--        Deleting a product content -->
        <container-box>
            <box-header title="DeleteProductContent"/>
            <box-body>
                <form-list list="contentList" name="DeleteProductContent" transition="deleteProductContent">
                    <field name="productContentId">
                        <default-field>
                            <display/>
                        </default-field>
                    </field>
                    <field name="productContentTypeEnumId">
                        <default-field>
                                <display/>
                        </default-field>
                    </field>
                    <field name="productId">
                        <default-field>
                            <display/>
                        </default-field>
                    </field>
                    <field name="contentLocation">
                        <default-field>
                            <display/>
                        </default-field>
                    </field>
                    <field name="deleteProductContent">
                        <default-field>
                            <submit/>
                        </default-field>
                    </field>
                </form-list>
            </box-body>
        </container-box>
    </widgets>
</screen>